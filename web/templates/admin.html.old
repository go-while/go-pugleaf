{{define "breadcrumb"}}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Admin Panel</li>
    </ol>
</nav>
{{end}}

{{define "content"}}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4 class="card-title mb-0">üõ†Ô∏è Admin Panel</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/profile" class="btn btn-outline-success w-100 mb-2">üë§ Back to Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{if .Success}}
<div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
    <strong>Success!</strong> {{.Success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{end}}

{{if .Error}}
<div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <strong>Error!</strong> {{.Error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{end}}

<!-- Old Admin Panel Tabs -->
<ul class="nav nav-tabs mt-3" id="adminTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">Users</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="newsgroups-tab" data-bs-toggle="tab" data-bs-target="#newsgroups" type="button" role="tab">Newsgroups</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="providers-tab" data-bs-toggle="tab" data-bs-target="#providers" type="button" role="tab">Providers</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="apitokens-tab" data-bs-toggle="tab" data-bs-target="#apitokens" type="button" role="tab">API Tokens</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="aimodels-tab" data-bs-toggle="tab" data-bs-target="#aimodels" type="button" role="tab">AI Models</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="nntpusers-tab" data-bs-toggle="tab" data-bs-target="#nntpusers" type="button" role="tab">NNTP Users</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="stats-tab" data-bs-toggle="tab" data-bs-target="#stats" type="button" role="tab">Statistics</button>
  </li>
</ul>
<div class="tab-content" id="adminTabContent">
  <!-- Users Tab -->
  <div class="tab-pane fade show active" id="users" role="tabpanel" aria-labelledby="users-tab">
    <!-- Create New User -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">‚ûï Add User</h5>
                </div>
                <div class="card-body">
                    <form autocomplete="off" method="POST" action="/admin/users">
                        <input autocomplete="false" name="hidden" type="text" style="display:none;">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input autocomplete="off" type="text" class="form-control" id="username" name="username" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input autocomplete="off" type="email" class="form-control" id="email" name="email" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="displayName" class="form-label">Display Name</label>
                                    <input autocomplete="off" type="text" class="form-control" id="displayName" name="displayName">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input autocomplete="new-password" type="password" class="form-control" id="password" name="password" required minlength="6">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- User List -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">üë• User Management</h5>
                        <span class="badge bg-light text-dark">{{len .Users}} users</span>
                    </div>
                </div>
                <div class="card-body">
                    {{if .Users}}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Display Name</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{range .Users}}
                                <tr>
                                    <td>{{.ID}}</td>
                                    <td><strong>{{.Username}}</strong></td>
                                    <td>{{.Email}}</td>
                                    <td>{{if .DisplayName}}{{.DisplayName}}{{else}}<em>None</em>{{end}}</td>
                                    <td>{{.CreatedAt.Format "2006-01-02 15:04"}}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <!-- Edit User Form -->
                                            <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#edit-{{.ID}}">
                                                Edit
                                            </button>
                                            <!-- Delete User Form (only if not current user) -->
                                            {{if and $.CurrentUser (ne .ID $.CurrentUser.ID)}}
                                            <form method="POST" action="/admin/users/delete" class="d-inline">
                                                <input type="hidden" name="user_id" value="{{.ID}}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Delete user {{.Username}}?')">
                                                    Delete
                                                </button>
                                            </form>
                                            {{end}}
                                        </div>
                                    </td>
                                </tr>
                                <!-- Collapsible Edit Form -->
                                <tr class="collapse" id="edit-{{.ID}}">
                                    <td colspan="6">
                                        <div class="card">
                                            <div class="card-header">
                                                <h6>Edit User: {{.Username}}</h6>
                                            </div>
                                            <div class="card-body">
                                                <form method="POST" action="/admin/users/update">
                                                    <input type="hidden" name="user_id" value="{{.ID}}">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label class="form-label">Username</label>
                                                                <input autocomplete="off" type="text" class="form-control" value="{{.Username}}" readonly>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label class="form-label">Email</label>
                                                                <input autocomplete="off" type="email" class="form-control" name="email" value="{{.Email}}" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label class="form-label">Display Name</label>
                                                                <input autocomplete="off" type="text" class="form-control" name="displayName" value="{{.DisplayName}}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="btn-group">
                                                        <button type="submit" class="btn btn-success">Save Changes</button>
                                                        <button type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#edit-{{.ID}}">
                                                            Cancel
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{end}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <strong>No users found.</strong> Add the first user above.
                    </div>
                    {{end}}
                </div>
            </div>
        </div>
    </div>
  </div>
  <!-- Newsgroups Tab -->
  <div class="tab-pane fade" id="newsgroups" role="tabpanel" aria-labelledby="newsgroups-tab">
    <!-- Create New Newsgroup -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">üì∞ Create New Newsgroup</h5>
                </div>
                <div class="card-body">
                    <form autocomplete="off" method="POST" action="/admin/newsgroups">
                        <input autocomplete="false" name="hidden" type="text" style="display:none;">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="newsgroup_name" class="form-label">Newsgroup Name</label>
                                    <input autocomplete="off" type="text" class="form-control" id="newsgroup_name" name="name" required
                                           placeholder="e.g., comp.programming">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="newsgroup_description" class="form-label">Description</label>
                                    <input autocomplete="off" type="text" class="form-control" id="newsgroup_description" name="description"
                                           placeholder="Brief description of the newsgroup">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="newsgroup_expiry" class="form-label">Expiry Days</label>
                                    <input autocomplete="off" type="number" class="form-control" id="newsgroup_expiry" name="expiry_days"
                                           min="0" placeholder="0" value="0">
                                    <small class="form-text text-muted">0 = never expire</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="newsgroup_max_articles" class="form-label">Max Articles</label>
                                    <input autocomplete="off" type="number" class="form-control" id="newsgroup_max_articles" name="max_articles"
                                           min="0" placeholder="0" value="0">
                                    <small class="form-text text-muted">0 = unlimited</small>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="newsgroup_active" name="active" checked>
                                        <label class="form-check-label" for="newsgroup_active">
                                            Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-warning d-block">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Newsgroup List -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">üì∞ Newsgroup Management</h5>
                        <span class="badge bg-light text-dark">{{.NewsgroupCount}} newsgroups total</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form method="GET" action="/admin" class="d-flex">
                                <input type="hidden" name="ng_page" value="1">
                                <input type="text" class="form-control me-2" name="search" placeholder="Search newsgroups..." value="{{.NewsgroupSearch}}">
                                <button type="submit" class="btn btn-outline-primary">üîç Search</button>
                                {{if .NewsgroupSearch}}
                                <a href="/admin" class="btn btn-outline-secondary ms-2">Clear</a>
                                {{end}}
                            </form>
                        </div>
                        <div class="col-md-6 text-end">
                            {{if .NewsgroupSearch}}
                            <small class="text-muted">Showing {{len .Newsgroups}} results for "{{.NewsgroupSearch}}"</small>
                            {{else}}
                            <small class="text-muted">Page {{.NewsgroupPage}} ({{len .Newsgroups}} of {{.NewsgroupCount}} newsgroups)</small>
                            {{end}}
                        </div>
                    </div>

                    {{if .Newsgroups}}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Articles</th>
                                    <th>Expiry Days</th>
                                    <th>Max Articles</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{range .Newsgroups}}
                                <tr>
                                    <td>{{.ID}}</td>
                                    <td><strong>{{.Name}}</strong></td>
                                    <td>{{if .Description}}{{.Description}}{{else}}<em>No description</em>{{end}}</td>
                                    <td>{{.MessageCount}}</td>
                                    <td>
                                        {{if eq .ExpiryDays 0}}
                                            <span class="badge bg-success">Never</span>
                                        {{else}}
                                            <span class="badge bg-info">{{.ExpiryDays}} days</span>
                                        {{end}}
                                    </td>
                                    <td>
                                        {{if eq .MaxArticles 0}}
                                            <span class="badge bg-success">Unlimited</span>
                                        {{else}}
                                            <span class="badge bg-warning">{{.MaxArticles}}</span>
                                        {{end}}
                                    </td>
                                    <td>
                                        {{if .Active}}
                                            <span class="badge bg-success">Active</span>
                                        {{else}}
                                            <span class="badge bg-secondary">Inactive</span>
                                        {{end}}
                                    </td>
                                    <td>{{.CreatedAt.Format "2006-01-02 15:04"}}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <!-- Edit Newsgroup Form -->
                                            <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#edit-ng-{{.ID}}">
                                                Edit
                                            </button>
                                            <!-- Delete Newsgroup Form -->
                                            <form method="POST" action="/admin/newsgroups/delete" class="d-inline">
                                                <input type="hidden" name="name" value="{{.Name}}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Delete newsgroup {{.Name}}? This will remove all articles!')">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <!-- Collapsible Edit Form -->
                                <tr class="collapse" id="edit-ng-{{.ID}}">
                                    <td colspan="9">
                                        <div class="card">
                                            <div class="card-header">
                                                <h6>Edit Newsgroup: {{.Name}}</h6>
                                            </div>
                                            <div class="card-body">
                                                <form method="POST" action="/admin/newsgroups/update">
                                                    <input type="hidden" name="name" value="{{.Name}}">
                                                    <div class="row">
                                                        <div class="col-md-3">
                                                            <div class="mb-3">
                                                                <label class="form-label">Name</label>
                                                                <input autocomplete="off" type="text" class="form-control" value="{{.Name}}" readonly>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="mb-3">
                                                                <label class="form-label">Description</label>
                                                                <input autocomplete="off" type="text" class="form-control" name="description" value="{{.Description}}">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <div class="mb-3">
                                                                <label class="form-label">Expiry Days</label>
                                                                <input autocomplete="off" type="number" class="form-control" name="expiry_days" value="{{.ExpiryDays}}" min="0">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <div class="mb-3">
                                                                <label class="form-label">Max Articles</label>
                                                                <input autocomplete="off" type="number" class="form-control" name="max_articles" value="{{.MaxArticles}}" min="0">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <div class="mb-3">
                                                                <label class="form-label">Status</label>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" name="active" {{if .Active}}checked{{end}}>
                                                                    <label autocomplete="off" class="form-check-label">Active</label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="btn-group">
                                                        <button type="submit" class="btn btn-success">Save Changes</button>
                                                        <button type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#edit-ng-{{.ID}}">
                                                            Cancel
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{end}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        {{if .NewsgroupSearch}}
                        <strong>No newsgroups found matching "{{.NewsgroupSearch}}".</strong> Try a different search term.
                        {{else}}
                        <strong>No newsgroups found.</strong> Create the first newsgroup above.
                        {{end}}
                    </div>
                    {{end}}

                    <!-- Pagination Controls -->
                    {{if and (not .NewsgroupSearch) (gt .NewsgroupPagination.TotalCount .NewsgroupPagination.PageSize)}}
                    <nav aria-label="Newsgroups pagination">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Page -->
                            {{if .NewsgroupPagination.HasPrev}}
                            <li class="page-item">
                                <a class="page-link" href="/admin?ng_page={{.NewsgroupPagination.PrevPage}}&ng_page_size={{.NewsgroupPagination.PageSize}}{{if .NewsgroupSearch}}&search={{.NewsgroupSearch}}{{end}}">Previous</a>
                            </li>
                            {{else}}
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                            {{end}}

                            <!-- Current Page Info -->
                            <li class="page-item active">
                                <span class="page-link">{{.NewsgroupPagination.CurrentPage}} of {{.NewsgroupPagination.TotalPages}}</span>
                            </li>

                            <!-- Next Page -->
                            {{if .NewsgroupPagination.HasNext}}
                            <li class="page-item">
                                <a class="page-link" href="/admin?ng_page={{.NewsgroupPagination.NextPage}}&ng_page_size={{.NewsgroupPagination.PageSize}}{{if .NewsgroupSearch}}&search={{.NewsgroupSearch}}{{end}}">Next</a>
                            </li>
                            {{else}}
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                            {{end}}
                        </ul>
                    </nav>
                    {{end}}
                </div>
            </div>
        </div>
    </div>
  </div>
  <!-- Providers Tab -->
  <div class="tab-pane fade" id="providers" role="tabpanel" aria-labelledby="providers-tab">
    <!-- Provider Management -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">üåê Add News Server / Provider</h5>
                </div>
                <div class="card-body">
                    <form autocomplete="off" method="POST" action="/admin/providers">
                        <input autocomplete="false" name="hidden" type="text" style="display:none;">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="provider_name" name="name" required
                                           placeholder="e.g., usenet.provider.com">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label for="provider_grp" class="form-label">Group</label>
                                    <input type="text" class="form-control" id="provider_grp" name="grp"
                                           placeholder="grp">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_host" class="form-label">Host</label>
                                    <input type="text" class="form-control" id="provider_host" name="host" required
                                           placeholder="news.provider.com">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label for="provider_port" class="form-label">Port</label>
                                    <input type="number" class="form-control" id="provider_port" name="port"
                                           min="1" max="65535" placeholder="119" value="119">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label class="form-label">SSL</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="provider_ssl" name="ssl">
                                        <label class="form-check-label" for="provider_ssl">
                                            SSL
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_username" class="form-label">Username</label>
                                    <input autocomplete="off" type="text" class="form-control" id="provider_username" name="username"
                                           placeholder="username">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_password" class="form-label">Password</label>
                                    <input type="password" autocomplete="new-password" class="form-control" id="provider_password" name="password"
                                           placeholder="password">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-success d-block">Create</button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_max_conns" class="form-label">Max Connections</label>
                                    <input type="number" class="form-control" id="provider_max_conns" name="max_conns"
                                           min="1" placeholder="1" value="1">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_priority" class="form-label">Priority</label>
                                    <input type="number" class="form-control" id="provider_priority" name="priority"
                                           min="1" placeholder="1" value="1">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="provider_max_art_size" class="form-label">Max Article Size</label>
                                    <input type="number" class="form-control" id="provider_max_art_size" name="max_art_size"
                                           min="0" placeholder="0" value="0">
                                    <small class="form-text text-muted">0 = unlimited</small>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="mb-3">
                                    <label class="form-label">Enabled</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="provider_enabled" name="enabled" checked>
                                        <label class="form-check-label" for="provider_enabled">
                                            Active
                                        </label>
                                    </div>
                                </div>
